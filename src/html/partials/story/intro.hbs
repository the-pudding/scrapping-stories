<section class='intro'>
	<div class='intro--meta'>
		<div class='title'>
			<img inline src='../src/assets/images/title.svg' class='title--graphic'>
		</div>
		<p class='intro__dek'>{{doc.dek}}</p>
		<div class='intro__row'>
			<p class='intro__byline'>By
				<a href='{{meta.author.url}}' target='_blank'>
					<strong>{{meta.author.name}}</strong>
				</a>
			</p>

			<time class='intro__time'>August 2020</time>
		</div>

	</div>

	{{#each doc.intro}}
	<p class='prose'>{{{value}}}</p>
	{{/each}}

	<div class='flowchart'>
		<img inline src='../src/assets/images/flowchart.svg' class='flow__large'>
	</div>


	{{#each doc.intro2}}
	<p class='prose'>{{{value}}}</p>
	{{/each}}


	<div class='minimap'>
		<img inline src='../src/assets/images/minimap.svg'>
	</div>


</section>